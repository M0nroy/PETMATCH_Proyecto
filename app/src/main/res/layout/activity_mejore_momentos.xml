<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    android:background="@drawable/font1"
    tools:context=".Mejore_momentos">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MuÃ©stranos las mejores fotos de tu mascota"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textSize="35dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="104dp"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/image" />

        <ImageView
            android:id="@+id/imagePreview2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="104dp"
            app:srcCompat="@drawable/image" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/imagePreview3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="104dp"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/image" />

        <ImageView
            android:id="@+id/imagePreview4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="104dp"
            app:srcCompat="@drawable/image" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="92dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSeleccionarImg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#F77C63"
            android:text="Imagen"
            app:icon="@drawable/image"
            app:iconGravity="textEnd" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:backgroundTint="#F77C63"
            android:onClick="omitir"
            android:text="Omitir"
            app:icon="@drawable/skip"
            app:iconGravity="textEnd" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubir"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:backgroundTint="#F77C63"
            android:onClick="subir"
            android:text="Subir"
            app:icon="@drawable/upload"
            app:iconGravity="textEnd" />
    </LinearLayout>

</LinearLayout>
